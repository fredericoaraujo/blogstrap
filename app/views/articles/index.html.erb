<%= link_to "Novo Artigo", new_article_path, class: 'btn btn-primary' if user_signed_in? %>

<%= render_if @highlights[0].present?, 'longer_featured', article: @highlights[0] %>
<div class="row mb-2">
    <%= render_if @highlights[1].present?, 'featured_post', article: @highlights[1] %>
    <%= render_if @highlights[2].present?, 'featured_post', article: @highlights[2] %>
</div>


<div class="row g-5">
    <div class="col-md-8">
        <h3 class="pb-4 mb-4 fst-italic border-bottom">
            From the Firehose
        </h3>

        <%= render @articles %>
        <%= render 'pagination' %>
    </div>

    <%= render 'rightside' %>
</div>

<%= content_for :category_filter do %>
<div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
        <% @categories.each do |category| %>
        <%= link_to category.name, root_path(category_id: category.id), class: "p-2 link-secondary #{'category-active' if category.id.to_s == params[:category_id]}" %>
        <% end %>
    </nav>
</div>
<% end %>